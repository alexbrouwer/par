<nav id="sidebarMenu">
    {% if usesNamespaces or not usesPackages %}
        <h6 class="sidebar-header d-flex justify-content-between align-items-center px-3 mt-4 mb-1">Namespaces</h6>
        <ul class="nav flex-column">
            {% if project.namespace.functions is not empty or project.namespace.constants is not empty or project.namespace.classes is not empty or project.namespace.interfaces is not empty or project.namespace.traits is not empty %}
                <li class="nav-item">{{ project.namespace|route('Global') }}</li>
            {% endif %}
            {% for namespace in project.namespace.children %}
                {% for child in namespace.children %}
                    <li class="nav-item"><a href="{{ link(child) }}">{{ namespace.name }}\{{ child.name }}</a></li>
                {% endfor %}
            {% endfor %}
        </ul>
    {% endif %}

    {% if usesPackages %}
        <h6 class="sidebar-header d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">Packages</h6>
        <ul class="nav flex-column">
            {% for package in project.package.children %}
                <li class="nav-item">{{ package|route('class:short') }}</li>
                {% if package.children is not empty %}
                    {% for child in package.children %}
                        <li class="nav-item"><a href="{{ link(child) }}">{{ package.name }}\{{ child.name }}</a></li>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </ul>
    {% endif %}
</nav>
