        <link rel="stylesheet" href="css/bootstrap-multiselect.min.css">
        <link rel="stylesheet" href="css/base.css">
    {% endblock %}
    {% block javascripts %}
        <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
